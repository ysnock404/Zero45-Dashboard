{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@modules/*": [
                "src/modules/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@config/*": [
                "src/shared/config/*"
            ],
            "@middleware/*": [
                "src/shared/middleware/*"
            ],
            "@utils/*": [
                "src/shared/utils/*"
            ],
            "@types/*": [
                "src/shared/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}